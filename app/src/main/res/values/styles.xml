<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="my_input">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/input_shape</item>
        <item name="android:maxLength">100</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textColorHint">#E4E4E4</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="my_spinner">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/spinner_shape</item>
        <item name="android:maxLength">100</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textColorHint">#E4E4E4</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>